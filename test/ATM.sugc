#import "model/Statemachine"

statemachine {
	initial state Init 
	
	data { int i = 0; }
		
	init { i = 0; }
	
	input { return Cancel; }
	
  	events DoWithdraw, Cancel, PinOK, PinNOK, MoneyTaken, CardTaken, CardRevoked

  	state Init {
    	DoWithdraw => Withdraw
    	Cancel => Init
  	} 
  	state Withdraw { 
    	PinOK => GiveMoney
    	PinNOK => RevokeCard
    	Cancel => Init
  	}
  	state GiveMoney {
    	MoneyTaken => ReturnCard
  	}
  	state ReturnCard {
    	CardTaken => Init
  	}
  	state RevokeCard {
    	CardRevoked => Init
  	}
}